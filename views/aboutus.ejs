<script>
    document.getElementById('contactForm').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent the default form submission
        var email = document.getElementById('email').value;
        var comment = document.getElementById('comment').value;
        
        fetch('/submit-contact', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email: email, comment: comment })
        })
        .then(response => response.json()) 
        .then(data => {
            // Handle server response for different cases
            if (data.redirect) {
                // Server requests redirecting to another page (login or register)
                window.location.href = data.redirect === 'register' ? '/register' : '/login';
            } else if (data.success) {
                // Comment submission was successful
                alert('Thank you for your message! We will get back to you as soon as possible.');
                // Reset the form after successful submission
                document.getElementById('contactForm').reset();
            } else {
                // Any other response (including errors not caught by catch block)
                alert('An unexpected response was received. Please try again or contact support.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while processing your request. Please try again.');
        });
    });
    </script>

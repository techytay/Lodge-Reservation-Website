        <!-- Room reservation/booking form -->
        <form action="/create-booking" method="POST" id="bookingForm"> 
            <div class="row justify-content-center">
                <div class="col-sm-auto">
                    <a href="#"><img src="images/calendar.png" height="30px"/></a>
                    <label for="checkIn" class="form-label">Check-In</label>
                    <input type="date" class="form-control" id="checkIn" name="checkinDate" placeholder="Check-In Date">
                </div>
                <div class="col-sm-auto">

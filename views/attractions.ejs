    <script>
      // Updated function to flip images with transition
      function flipImage(imageId, newSrc, originalSrc) {
          var image = document.getElementById(imageId);
          // Check if the image is already flipped
          if (image.classList.contains('flipped')) {
              // If flipped, change back to original source and remove flipped class
              image.src = originalSrc;
              image.classList.remove('flipped');
          } else {
              // If not flipped, change to new source and add flipped class
              image.src = newSrc;
              image.classList.add('flipped');
          }
      }
  
      document.addEventListener("DOMContentLoaded", function() {
          // Add the 'img-transition' class to each image for transition effect
          document.querySelectorAll('.card-img-top').forEach(img => img.classList.add('img-transition'));
  
          // Event listeners for each image
          document.getElementById('hikingImage').addEventListener('click', function() { flipImage('hikingImage', './images/hiking_back.jpg', './images/hiking.jpg'); });
          document.getElementById('kayakImage').addEventListener('click', function() { flipImage('kayakImage', './images/kayaking_back.jpg', './images/kayak.jpg'); });
          document.getElementById('whaleWatchingImage').addEventListener('click', function() { flipImage('whaleWatchingImage', './images/WhaleWatching_back.jpg', './images/WhaleWatching.jpg'); });
          document.getElementById('scubaImage').addEventListener('click', function() { flipImage('scubaImage', './images/Scuba_back.jpg', './images/Scuba.jpg'); });
      });
  </script>
  
    </script>
</head>
